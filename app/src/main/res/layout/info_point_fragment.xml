<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="450dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="#FFFFFF"
    android:visibility="visible"
    tools:context=".InfoPointFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.view.ViewPager
        android:id="@+id/sliderImageSite"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/siteDescription"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/siteTitle"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/closeFragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_cross_icon"
        android:visibility="visible" />

    <Button
        android:id="@+id/aceptReference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right"
        android:backgroundTint="@color/colorPrimary"
        android:padding="@dimen/activity_vertical_margin"
        android:text="Mas"
        android:visibility="visible" />

</RelativeLayout>